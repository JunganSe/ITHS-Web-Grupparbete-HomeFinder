@model HomeFinder.ViewModels.PropertyViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<h4>Property</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Properties" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Property.Id" />
            <div class="form-group">
                <label asp-for="Property.Price" class="control-label"></label>
                <input asp-for="Property.Price" class="form-control" />
                <span asp-validation-for="Property.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Description" class="control-label"></label>
                <input asp-for="Property.Description" class="form-control" />
                <span asp-validation-for="Property.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.Summary" class="control-label"></label>
                <input asp-for="Property.Summary" class="form-control" />
                <span asp-validation-for="Property.Summary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.NumberOfRooms" class="control-label"></label>
                <input asp-for="Property.NumberOfRooms" class="form-control" />
                <span asp-validation-for="Property.NumberOfRooms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.BuildingArea" class="control-label"></label>
                <input asp-for="Property.BuildingArea" class="form-control" />
                <span asp-validation-for="Property.BuildingArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.PlotArea" class="control-label"></label>
                <input asp-for="Property.PlotArea" class="form-control" />
                <span asp-validation-for="Property.PlotArea" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="Property.NumberOfViews" class="control-label"></label>
                <input asp-for="Property.NumberOfViews" class="form-control" />
                <span asp-validation-for="Property.NumberOfViews" class="text-danger"></span>
            </div>

            <div class="form-group" hidden>
                <label asp-for="Property.PublishingDate" class="control-label"></label>
                <input asp-for="Property.PublishingDate" class="form-control" />
                <span asp-validation-for="Property.PublishingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.ConstructionYear" class="control-label"></label>
                <input asp-for="Property.ConstructionYear" class="form-control" />
                <span asp-validation-for="Property.ConstructionYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Property.MapUrl" class="control-label"></label>
                <input asp-for="Property.MapUrl" class="form-control" />
                <span asp-validation-for="Property.MapUrl" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Property.ViewingDate" class="control-label"></label>
                <input asp-for="Property.ViewingDate" class="form-control" />
                <span asp-validation-for="Property.ViewingDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adress.Street" class="control-label"></label>
                <input asp-for="Adress.Street" class="form-control" />
                <span asp-validation-for="Adress.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.StreetNumber" class="control-label"></label>
                <input asp-for="Adress.StreetNumber" class="form-control" />
                <span asp-validation-for="Adress.StreetNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adress.PostalCode" class="control-label"></label>
                <input asp-for="Adress.PostalCode" class="form-control" />
                <span asp-validation-for="Adress.PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Adress.City" class="control-label"></label>
                <input asp-for="Adress.City" class="form-control" />
                <span asp-validation-for="Adress.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adress.Country" class="control-label"></label>
                <input asp-for="Adress.Country" class="form-control" />
                <span asp-validation-for="Adress.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Property.PropertyTypeId" class="control-label"></label>
                <select asp-for="Property.PropertyTypeId" class="form-control">
                    @for (int i = 0; i < Model.PropertyTypes.Count; i++)
                    {
                        <option value="@Model.PropertyTypes[i].Id">@Model.PropertyTypes[i].Description</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Property.TenureId" class="control-label"></label>
                <select asp-for="Property.TenureId" class="form-control">
                    @for (int i = 0; i < Model.Tenures.Count; i++)
                    {
                        <option value="@Model.Tenures[i].Id">@Model.Tenures[i].Description</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Property.SaleStatusId" class="control-label"></label>
                <select asp-for="Property.SaleStatusId" class="form-control">
                    @for (int i = 0; i < Model.SaleStatuses.Count; i++)
                    {
                        <option value="@Model.SaleStatuses[i].Id">@Model.SaleStatuses[i].Description</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Property.EstateAgentId" class="control-label"></label>
                <select asp-for="Property.EstateAgentId" class="form-control">
                    @for (int i = 0; i < Model.EstateAgents.Count; i++)
                    {
                        <option value="@Model.EstateAgents[i].Id">@Model.EstateAgents[i].FirstName @Model.EstateAgents[i].LastName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
